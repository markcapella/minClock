install: FORCE
	@if [ ! -f "minClock" ]; then \
	    echo "Executable not found !"; \
		echo "---> Did you run make yet?"; \
		exit 1; \
	fi

	# Kill any active instances.
	-pkill minClock

	rm -rf ~/.local/minClock
	mkdir ~/.local/minClock

	cp 'minClock' ~/.local/minClock/
	chmod +x ~/.local/minClock/minClock

	cp 'minClock.svg' ~/.local/minClock/
	cp 'preMinClock.svg'  ~/.local/minClock/
	cp 'postMinClock.svg'  ~/.local/minClock/

	cp 'okButton.png'  ~/.local/minClock/
	cp 'cancelButton.png'  ~/.local/minClock/
	cp 'alarmBeep.wav'  ~/.local/minClock/

	ln -f 'minClock.svg' ~/.local/share/icons/hicolor/48x48/apps/minClock.svg

	cp 'minClock.desktop' ~/Desktop

	@echo "Install Done !"

FORCE: ;
